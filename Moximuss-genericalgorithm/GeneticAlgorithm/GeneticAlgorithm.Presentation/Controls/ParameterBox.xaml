<UserControl x:Class="GeneticAlgorithm.Presentation.Controls.ParameterBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeneticAlgorithm.Presentation.Controls"
             mc:Ignorable="d" Height="39.022" Width="362.551">
    <Grid>
        <Label Content="{Binding ParameterTitle}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBox Text="{Binding ParameterValue}" HorizontalAlignment="Left" Height="23" Margin="151,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203"/>
    </Grid>
</UserControl>
